{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./lib",
        "rootDir": "./src",
        "declaration": true,
        "moduleResolution": "node"
    },
    "include": [
        "lib/**/*",
        "bin/**/*",
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/**/*.test.ts"
    ]
}
